{{ page.main_menu }}

<div class="container">
    <div class="row">
        {{ page.header }}
    </div>
</div>
{% if is_front %}
<div class="container-fluid">
    <div class="row">
        <div id="map_canvas">
            <script type="application/json">
                {
                    "service" : "map",
                    "version" : "2.0",
                    "custom": "/themes/custom/pledge_theme/js/homemap.js"
                }
            </script>
        </div>
    </div>
</div>
{% endif %}

<div class="container">
    <div class="page">
        {% if not is_front %}
            {{ page.breadcrumbs }}
        {% endif %}

        {{ page.content }}

    </div>
</div>

<div class="container-fluid cont-footer-1">
    <footer class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="col-xs-12 col-sm-3 col-md-8 col-lg-8"></div>
                <div class="col-xs-12 col-sm-3 col-md-2 col-lg-2">
                    <div class="footer-logo"></div>
                </div>
            </div>
        </div>
    </footer>
</div>

<div class="container-fluid cont-footer-2">
    <div class="container">
        {{ page.footer_menu }}
        <p>&copy; {{ 'Copyright Pledge Viewers'|t }} {{ "now"|date("Y") }} - {{ 'Some rights reserved'|t }}.</p>
    </div>
</div>


<div class="cookie-disclaimer">
    <div class="cookie-close accept-cookie"><i class="fa fa-times"></i></div>
    <div class="container">
        {{ page.cookies_text }}
        <button type="button" class="btn btn-success accept-cookie">{{ "Ok, please continue!"|t }}</button>
    </div>
</div>
